# Sparkle Studio Backend Environment Configuration

# Environment
SPARKLE_ENV=local
DEBUG=true

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://localhost"]

# Git Configuration
GIT_REPO_PATH=/app/git_repo
GIT_DEFAULT_BRANCH=main
GIT_REMOTE_URL=
GIT_USERNAME=
GIT_TOKEN=

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_REMOTE=
SPARK_APP_NAME=SparkleStudio

# Cluster Configuration (optional)
CLUSTER_TYPE=local
CLUSTER_URL=
CLUSTER_TOKEN=

# Paths
STUDIO_CONFIG_PATH=/app/config/studio.yaml
SPARKLE_ENGINE_PATH=/opt/sparkle

# Security (change in production!)
SECRET_KEY=dev-secret-key-change-in-production
